<Page x:Class="PHILOBM.Pages.ClientDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Client Details">
    <Grid Margin="10">
        <Grid Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Pour le titre -->
                <RowDefinition Height="Auto"/>
                <!-- Pour le nom -->
                <RowDefinition Height="Auto"/>
                <!-- Pour le prénom -->
                <RowDefinition Height="Auto"/>
                <!-- Pour le téléphone -->
                <RowDefinition Height="Auto"/>
                <!-- Pour l'email -->
                <RowDefinition Height="Auto"/>
                <!-- Pour le bouton -->
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Client Details" FontSize="24" FontWeight="Bold" Margin="0,10,0,10" Grid.Row="0"/>

            <!-- Client Name -->
            <StackPanel Grid.Row="1" Margin="0,0,0,5">
                <Label Content="Name" FontWeight="Bold"/>
                <TextBox Name="NameTextBox" Margin="0,0,0,5"/>
            </StackPanel>

            <!-- Client First Name -->
            <StackPanel Grid.Row="2" Margin="0,0,0,5">
                <Label Content="First Name" FontWeight="Bold"/>
                <TextBox Name="FirstNameTextBox" Margin="0,0,0,5"/>
            </StackPanel>

            <!-- Client Phone -->
            <StackPanel Grid.Row="3" Margin="0,0,0,5">
                <Label Content="Phone" FontWeight="Bold"/>
                <TextBox Name="PhoneTextBox" Margin="0,0,0,5"/>
            </StackPanel>

            <!-- Client Email -->
            <StackPanel Grid.Row="4" Margin="0,0,0,5">
                <Label Content="Email" FontWeight="Bold"/>
                <TextBox Name="EmailTextBox" Margin="0,0,0,5"/>
            </StackPanel>

            <!-- Update Client Button -->
            <Button Content="Mettre à jour le client" Click="UpdateClient_Click" 
                    Width="120" Height="30" Margin="0,10,0,0" Grid.Row="5"
                    HorizontalAlignment="Left"/>
        </Grid>
    </Grid>
</Page>
